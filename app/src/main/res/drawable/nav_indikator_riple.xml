<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@android:color/holo_green_light">
    <!-- Layer pertama untuk garis utama -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_green_light" />
            <size android:height="4dp" /> <!-- Ketebalan garis utama -->
        </shape>
    </item>

    <!-- Efek bayangan di bawah garis -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@android:color/system_secondary_light"
                android:endColor="@android:color/transparent"
                android:type="linear"
                tools:ignore="NewApi" />
            <size android:height="6dp" /> <!-- Ketebalan bayangan -->
        </shape>
    </item>
</ripple>
